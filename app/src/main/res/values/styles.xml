<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="AppTextViewBold">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_4sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17sdp</item>


    </style>

    <style name="ButtonShape" parent="@style/Widget.Neumorph.Button">
        <item name="neumorph_shadowElevation">0dp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="neumorph_shadowColorDark">@color/app_color_yellow</item>
        <item name="neumorph_shadowColorLight">@color/brickRed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="srcCompat">@drawable/ic_baseline_arrow_forward_24</item>


    </style>

    <style name="AppTextViewNormal">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_4sdp</item>
        <item name="android:textColor">@color/app_color_gray</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AppTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="AppTextInputEditTextNoDrawable">
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="FullScreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_26sdp</item>

        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">@dimen/_6sdp</item>
        <item name="neumorph_cornerSizeTopRight">@dimen/_6sdp</item>
        <item name="neumorph_cornerSizeBottomLeft">@dimen/_6sdp</item>
        <item name="neumorph_cornerSizeBottomRight">@dimen/_6sdp</item>
    </style>
    <style name="roundButtonWhite" parent="@style/Base.Theme.Neumorph.Light">

        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_button_white</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">

        <item name="colorControlActivated">@color/app_color_yellow</item>

        <item name="colorSwitchThumbNormal">@color/grey</item>

    </style>

    <!--Material Circle Image style-->
    <style name="circleImageViewTopLRround" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopLeft">5%</item>
        <item name="cornerSizeTopRight">5%</item>
    </style>

    <style name="circleImageViewRound" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">5%</item>

    </style>


    <style name="pop_up_menue">
        <item name="android:background">@drawable/rounded_button_white</item>
    </style>

    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:textColor">@color/app_color_yellow</item>
        <item name="iconTint">@color/app_color_yellow</item>
        <item name="android:popupBackground">@drawable/rounded_button_white</item>
    </style>

    <style name="Widget.Theme.CloudGalleryApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.CloudGalleryApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>