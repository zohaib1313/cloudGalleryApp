<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:windowSoftInputMode="stateHidden|adjustResize"
    tools:context=".activities.PostDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_menu_24" />

                <TextView
                    style="@style/AppTextViewBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Comment"
                    android:textColor="@color/app_color_blue" />
            </RelativeLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/guideline4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/rlHeader"
                app:layout_constraintTop_toBottomOf="@+id/rlHeader"
                app:shapeAppearanceOverlay="@style/circleImageViewTopLRround"
                app:srcCompat="@drawable/g" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintStart_toStartOf="@+id/imageView6">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="@drawable/alpha_overlay_grey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/tvPostName"
                        style="@style/AppTextViewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Image name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tvTime"
                        style="@style/AppTextViewNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPostName"
                        android:text="3 hours ago"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_10sdp" />


                    <ImageView
                        android:id="@+id/ivComments"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_comment_24" />

                    <TextView
                        android:id="@+id/tvCommentsCount"
                        style="@style/AppTextViewNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/_4sdp"
                        android:layout_toStartOf="@+id/ivComments"
                        android:text="78"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7sdp" />


                    <ImageView

                        android:id="@+id/ivLikes"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_toStartOf="@+id/tvCommentsCount"
                        android:src="@drawable/ic_baseline_favorite_24" />

                    <TextView
                        style="@style/AppTextViewNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/_4sdp"
                        android:layout_toStartOf="@+id/ivLikes"
                        android:text="961"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7sdp" />

                </RelativeLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/guideline4"
                tools:listitem="@layout/row_comments" />

            <RelativeLayout

                android:id="@+id/relativeLayout3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="@drawable/rounded_bg_blue"
                android:paddingStart="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintStart_toStartOf="@+id/relativeLayout4">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ivUserCommenting"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/g"
                    app:civ_border="true"
                    app:civ_border_color="@color/grey"
                    app:civ_border_width="@dimen/_1sdp" />

                <EditText
                    style="@style/AppTextViewNormal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/ivUserCommenting"
                    android:gravity="center|start"
                    android:hint="Add Comment"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:background="@drawable/rounded_bg_red"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_send_24"
                app:layout_constraintBottom_toBottomOf="@+id/relativeLayout3"
                app:layout_constraintEnd_toEndOf="@+id/relativeLayout4"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout4"
                app:layout_constraintTop_toTopOf="@+id/relativeLayout3" />

            <include
                android:id="@+id/loadingLayout"
                layout="@layout/loadin_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/rlHeader"
                app:layout_constraintTop_toBottomOf="@+id/rlHeader" />

            <include
                android:id="@+id/noDataLayout"
                layout="@layout/no_data_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/rlHeader"

                app:layout_constraintTop_toBottomOf="@+id/rlHeader" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

